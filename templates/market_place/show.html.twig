{% extends 'base.html.twig' %}

{% block title %}MarketPlace{% endblock %}

{% block body %}
    <div class="marketplace-container">
        <h1 class="page-title">MarketPlace Details</h1>

        <table class="table table-striped table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ market_place.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ market_place.name }}</td>
            </tr>
            <tr>
                <th>ApiKey</th>
                <td>{{ market_place.apiKey }}</td>
            </tr>
            </tbody>
        </table>

        <div class="buttons-container">
            <a href="{{ path('app_market_place_index') }}" class="btn btn-primary">Back to List</a>
            <a href="{{ path('app_market_place_edit', {'id': market_place.id}) }}" class="btn btn-warning">Edit</a>
        </div>

        {{ include('market_place/_delete_form.html.twig') }}
    </div>
    {% block stylesheets %}
        <style>
            .marketplace-container {
                max-width: 800px;
                margin: 0 auto;
                padding: 20px;
                background-color: #f9f9f9;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

            .page-title {
                text-align: center;
                color: #333;
                margin-bottom: 20px;
                font-size: 2rem;
                font-weight: 600;
            }

            .table {
                width: 100%;
                border-collapse: collapse;
                margin-bottom: 20px;
            }

            .table th, .table td {
                padding: 12px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .table th {
                background-color: #f4f4f4;
                font-weight: bold;
                color: #555;
            }

            .table td {
                background-color: #fff;
                color: #333;
            }

            .buttons-container {
                display: flex;
                justify-content: space-between;
            }

            .btn {
                padding: 10px 15px;
                border: none;
                border-radius: 4px;
                font-size: 1rem;
                cursor: pointer;
                text-decoration: none;
                transition: background-color 0.3s ease;
            }

            .btn-primary {
                background-color: #007bff;
                color: white;
            }

            .btn-warning {
                background-color: #ffc107;
                color: black;
            }
            .btn-danger {
                background-color: #ec1c1c;
                color: #ffffff;
            }

            .btn:hover {
                opacity: 0.8;
            }

        </style>
    {% endblock %}

{% endblock %}
