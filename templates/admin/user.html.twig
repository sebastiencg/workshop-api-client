{# templates/admin/user_list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Admin - Gestion des Utilisateurs{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #f0f0f0;
        }
        .admin-table {
            width: 80%;
            margin: 2em auto;
            border-collapse: collapse;
        }
        .admin-table th, .admin-table td {
            border: 1px solid #ccc;
            padding: 0.5em;
        }
        .admin-table th {
            background-color: #e0e0e0;
        }
        .admin-actions a {
            margin-right: 0.5em;
            text-decoration: none;
            color: #007bff;
        }
        .admin-actions a:hover {
            text-decoration: underline;
        }
    </style>

    <h1>Gestion des Utilisateurs</h1>

    <table class="admin-table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Actif</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.active ? 'Oui' : 'Non' }}</td>
                <td class="admin-actions">
                    <form action="{{ path('admin_user_toggle', {'id': user.id}) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                        <button type="submit">
                            {{ user.active ? 'DÃ©sactiver' : 'Activer' }}
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
