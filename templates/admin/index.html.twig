{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <style>
        .dashboard-page {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f9;
        }

        .dashboard-container {
            width: 100%;
            max-width: 1000px;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .dashboard-title {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 40px;
            font-weight: bold;
        }

        .cards-container {
            display: flex;
            justify-content: space-around;
            gap: 20px;
        }

        .card {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 45%;
            padding: 30px;
            background-color: #007bff;
            color: white;
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            text-decoration: none;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .card h2 {
            font-size: 1.8rem;
            margin-bottom: 15px;
        }

        .card p {
            font-size: 1rem;
            margin-bottom: 0;
        }

        .card:hover {
            transform: translateY(-5px);
            background-color: #0056b3;
        }
    </style>

    <div class="dashboard-page">
        <div class="dashboard-container">
            <h1 class="dashboard-title">Admin Dashboard</h1>

            <div class="cards-container">
                <a href="{{ path('admin_user_list') }}" class="card">
                    <h2>Manage Users</h2>
                    <p>View, edit, and manage user accounts.</p>
                </a>

                <a href="{{ path('app_market_place_index') }}" class="card">
                    <h2>Market Place</h2>
                    <p>Manage Market Places and settings.</p>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
